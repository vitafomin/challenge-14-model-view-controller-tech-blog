<div class="row">
  <h2>Welcome to your Dashboard!</h2>
</div>

{{#if projects.length}}
<div class="post-list">
  <h2>Current Posts:</h2>

  {{#each posts as |post|}}
  <div>
    <div>
      <h4><a href="/post/{{post.id}}">{{post.name}}</a></h4>
    </div>
    <div>
      <button class="update-btn" data-id="{{post.id}}">Update</button>
    </div>
    <div>
      <button class="dele-btn" data-id="{{post.id}}">Delete</button>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
<button type="post" class="btn btn-primary post-btn"> <a href="./newpost.handlebars"></a>+Post</button>

